% Macros para espacios
\newcommand{\Simplex}[1][n]{\Sigma_{#1}}
\newcommand{\ProbSpace}[1][\cX]{\cP(#1)}
\newcommand{\ProbSpaceAC}[1][\cX]{\cP_{\text{ac}}(#1)}

%% ====================================================================
% Macros para operadores

% Operador push-forward
\newcommand{\pf}[1]{{#1}_{\sharp}}
% Transporte push-forward
\newcommand{\Tpf}{\pf{T}}
% Convergencia débil
\newcommand{\wto}{\Rightarrow}
% Probabilidad
\DeclareMathOperator{\ProbOp}{\mathbb{P}}
\newcommand{\Prob}[1][]{\opparent{\ProbOp}{#1}{\left(#1\right)}}
% Esperanza
\DeclareMathOperator{\ExpOp}{\mathbb{E}}
\newcommand{\Exp}[1][]{\opparent{\ExpOp}{#1}{\left[#1\right]}}
% Variación Total
\DeclareMathOperator{\TVOp}{TV}
\newcommand{\TV}[2]{\opparent{\TVOp}{#1}{\left(#1, #2\right)}}
% Divergencia de Kullback-Leibler
\DeclareMathOperator{\KLOp}{KL}
\newcommand{\KL}[2]{\opparent{\KLOp}{#1}{\left(#1 \mid #2\right)}}
% Divergencia de Jensen-Shannon
\DeclareMathOperator{\JSOp}{JS}
\newcommand{\JS}[2]{\opparent{\JSOp}{#1}{\left(#1, #2\right)}}
% Coupling
\DeclareMathOperator{\Cpl}{Cpl}
% Distancia de Wasserstein
\newcommand{\Wasserstein}[3][1]{W_{#1}(#2,#3)}
% Espacio de Wasserstein
\newcommand{\WassersteinSpace}[2][1]{\cW_{#1}(#2)}

