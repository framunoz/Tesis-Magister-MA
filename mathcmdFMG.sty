%% Paquetes requeridos y definiciones preliminares, necesarias para las opciones
\RequirePackage{amssymb,amsthm}                    % Para los símbolos matemáticos
% \RequirePackage[dvipsnames]{xcolor}        % Para cambiar el color de la letra

\newif\if@swapeps  % Para controlar el estilo del epsilon
\@swapepsfalse
\newif\if@swapphi  % Para controlar el estilo del phi
\@swapphifalse

%% ====================================================================

% %% En esta parte se manejan las opciones pasadas al paquete
% Opción para activar los colores de los teoremas
\DeclareOption{swapeps}{\@swapepstrue}
\DeclareOption{swapphi}{\@swapphitrue}

\DeclareOption*{\PackageWarning{examplepackage}{Unknown ‘\CurrentOption’}}
\ProcessOptions\relax

%% ====================================================================

% Para intercambiar el estilo del epsilon
\if@swapeps
    \let\oldepsilon\epsilon
    \let\epsilon\varepsilon
    \let\varepsilon\oldepsilon
\fi

% Para intercambiar el estilo del phi
\if@swapphi
    \let\oldphi\phi
    \let\phi\varphi
    \let\varphi\oldphi
\fi

